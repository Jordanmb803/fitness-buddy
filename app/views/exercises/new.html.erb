<%= form_for @exercise, url_path: exercises_path(date: @date) do |form| %>
  <p>
    <%= form.label :exercise %><br>
    <%= form.text_field :exercise %>
  </p>
 
  <p>
    <%= form.label :weight_in_lbs %><br>
    <%= form.text_area :weight_in_lbs %>
  </p>

  <p>
    <%= form.label :sets %><br>
    <%= form.text_area :sets %>
  </p>
 
  <p>
    <%= form.label :reps %><br>
    <%= form.text_area :reps %>
  </p>

  <p>
    <%= form.label :date %><br>
    <%= form.date_select :date %>
  </p>
 
  <p>
    <%= form.submit %>
  </p>
<% end %>
