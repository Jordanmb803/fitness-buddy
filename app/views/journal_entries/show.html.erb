<%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "sign-out" %>

<div class="journal-header">
  <%= link_to image_tag("left-arrows-2x.png", class: "arrow" ), select_date_path(date: @journal_entry.date - 1.day) %>
  <h1 class="header"><%= @journal_entry.date %></h1>
  <%= link_to image_tag("right-arrows-2x copy.png", class: "arrow"), select_date_path(date: @journal_entry.date + 1.day) %>
</div>

<div class="exercises">
  <% @exercises.each do |exercise| %>
    <div class="exercise-details">
      <h3 class="exercise">
        <%= exercise.exercise %>
      </h3>

      <%= link_to edit_exercise_path(exercise) do %>
        <div class="exercise-row">
          <p class="e-r-contents">
            Sets: <%= exercise.sets %>, Reps: <%= exercise.reps %>, Lbs: <%= exercise.weight_in_lbs %>
          </p>
          <p class="e-r-contents">
            <%= link_to '...', exercise_path(exercise), method: :delete, class: "destroy-link" %>
          </p>
        </div>
        <p class="large-row exercise-row">
          Notes:
          <%= exercise.notes %>
        </p>
      <% end %>
    </div>
  <% end %>

  <%= link_to '+ Add Exercise', exercise_search_path(journal_entry_id: @journal_entry.id, date: @journal_entry.date), class: "link" %>
</div>
